<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Login Form</h2>
            <form class="login">
                <div class="input-field">
                    <label for="login-email">Email</label>
                    <input type="email" class="validate email-input" name="login-email">
                </div>
                <div class="input-field">
                    <label for="login-password">Password</label>
                    <input type="password" class="validate password-input" name="login-password">
                </div>
                <button type="submit" class="btn btn-default">Login</button>
            </form>
            <br />
            <p>Or sign up
                <a href="/">here</a>
            </p>
        </div>
    </div>
</div>